<% if notice %>
  <div class="alert alert-warn">
    <a href="javascript:void(0);" data-dismiss="alert" class="close">×</a>
    <%= notice %>
  </div>
<% end %>
<div class="form-horizontal">
  <h1 class="action-title"><%= t 'select_address' %></h1>
  <div class="ship_add">
    <% @addresses.each_with_index do |address, index|  %>
      <%= render 'address', :address => address, :index => index %>
    <% end unless (no_add = @addresses.empty?) %>
    <%= render 'body', :no_add => no_add %>
  </div>

  <div class="cartFoot clearfix">
    <%= form_tag update_address_checkouts_path, :id => 'cart_address_id' do %>
      <a href="<%= edit_cart_path %>" class="shopgoon">« <%= t 'back_to_cart' %></a>
      <%= hidden_field_tag :address_id %>
      <button class="btn btn-large btn-primary" type="button"><%= t 'con' %><i class="icon-chevron-right icon-white"></i></button>
    <% end %>
  </div>
</div>
