<table class="order-admin table table-striped">
  <thead>
    <tr>
      <th class='input-small'>订单号</th>
      <th class='input-small'>买家名</th>
      <th>最新回复信息</th>
      <th width="130px">更新时间</th>
      <th width="80px">订单状态</th>
      <th width="48px"></th>
    </tr>
  </thead>
  <% @messages.each do |m| %>
    <% if (order = m.related_item).present? %>
      <tr>
        <td><%= link_to m.related_id, manage_order_path(order) %></td>
        <td><%= order.user_name %></td>
        <td><%= m.replies.last.content.truncate(80) %></td>
        <td><%= m.updated_at.to_local %></td>
        <td><%= t_models(order, 'get_status') %></td>
        <td><%= link_to "回复", manage_order_path(order), :class => "btn btn-primary pull-right" %></td>
      </tr>
    <% end %>
  <% end %>
</table>
