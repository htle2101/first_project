<div class='span21 page_type'>
  <%= link_to "创建公告", new_manage_page_path(:locale => :en, :type => PageType::EXCLUDE_TYPES[0]), :class => 'btn btn-primary create_button'%>
  <table class='order-admin order-center table table-hover'>
    <tr>
      <th>标题</th>
      <th>内容</th>
      <th>创建时间</th>
      <th>操作</th>
    </tr>
    <%= content_tag_for(:tr,  @pages) do |page| %>
      <td><%= page.title %></td>
      <td><%= truncate(page.content.try(:html_safe), :length => 80) %></td>
      <td><%= page.created_at.to_s(:db) %></td>
      <td>
        <%= link_to "编辑", edit_manage_page_path(page, :locale=>:en), :class => 'btn' %>
        <%= link_to "删除", manage_page_path(page), :class => 'btn', :method => :delete %>
      </td>
    <% end -%>
  </table>
  <%= will_paginate @pages, :renderer => PaginationNoFollow %>
</div>

