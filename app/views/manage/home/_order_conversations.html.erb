<table class="table table-striped">
  <tbody>
    <% role_tasks.each do |conversation| %>
      <tr class='task_column'>
        <td>
          <div class="flow">
            <span class="flow-time"><%= timeago_tag conversation.newest_message.created_at, :lang => "zh-CN" %></span>
            <span><span class="flow-user"><%= link_to conversation.newest_message.user_username, [:manage, conversation.newest_message.user] %></span> 对订单
            <a href="#"><%= conversation.related_id %></a>
            的留言: </span><%= link_to truncate(conversation.newest_message.content, :length => 30), manage_order_path(conversation.related_item), :title => conversation.newest_message.content %>
          <a href="<%= manage_order_path(conversation.related_item) %>" class='pull-right go_process btn btn-mini btn-success'>
              <i class=' icon-arrow-right'></i>
            </a>
          </div>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>
