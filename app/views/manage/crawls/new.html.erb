<% if @notice %>
  <div class="alert alert-error"><%= @notice %></div>
<% end %>
<%= form_tag manage_crawls_path, :class => "form-horizontal" do %>
  <div class="control-group">
    <label class="control-label">抓取类型：</label>
    <div class="controls">
      <%= select_tag 'type', options_for_select(CrawlLog::TYPE, params[:type]), :prompt => "选择类型" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">关键词/店铺url/目录cid：</label>
    <div class="controls">
      <ul>
        <li>支持填写多个，每个之间以换行分隔。</li>
        <li>店铺url应该是http://xxx.tmall.com/ 或 http://xxx.taobao.com/</li>
        <li style="color:red;font-weight:bold">如果抓取的产品中有专业名词，请到<%= link_to '预翻译关键词', translated_manage_keywords_path %>那里添加后再加抓取任务。</li>
      </ul>
      <%= text_area_tag 'keys', params[:keys], :rows => 15 %>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag "提交", :class => "btn btn-pirmary" %>
  </div>
<% end %>
