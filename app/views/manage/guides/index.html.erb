<div class='span21'>
  <%= render 'nav_head' %>
  <table class="table table-hover">
    <tr>
      <th width='5%'>NO.</th>
      <th width='20%'>标题</th>
      <th width='15%'>关联目录</th>
      <th width='30%'>关联产品</th>
      <th width="30%">操作</th>
    </tr>
    <% @guides.each do |g| %>
      <tr>
        <td><%= g.id %></td>
        <td><%= link_to g.title, g, :target => "_blank", "data-no-turbolink" => true %></td>
        <td><%=raw relate_category_name(g) %></td>
        <td><%=raw relate_products_with_link(g) %></td>
        <td>
          <%= link_to '编辑英文版本', edit_manage_guide_path(g, :locale => :en) %>
          <%= link_to '编辑中文版本', edit_manage_guide_path(g, :locale => :cn) %>
          <%= link_to '编辑俄文版本', edit_manage_guide_path(g, :locale => :ru) %>
          <%= link_to '删除', [:manage, g], :method => :delete %>
          <%= link_to '预览', g, :class => 'btn', :target => "_blank" %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @guides, :renderer => PaginationNoFollow %>
</div>