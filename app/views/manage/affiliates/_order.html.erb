<table class="order-admin center-order table table-hover">
  <thead>
    <tr>
      <th>订单号</th>
      <th>购买人</th>
      <th>总价</th>
      <th>下单时间</th>
      <th>订单状态</th>
    </tr>
  </thead>
  <tbody>
    <% referrals.each do |rp| %>
      <tr>
        <td><%= link_to rp.order.number, [:manage, rp.order] %></td>
        <td><%= link_to rp.order.user.username, [:manage, rp.order.user] %></td>
        <td><%= rp.order.total %></td>
        <td><%= rp.order.created_at.to_s(:db) %></td>
        <td><%= Order.status_cn(rp.order.status) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate referrals, :renderer => PaginationNoFollow %>
