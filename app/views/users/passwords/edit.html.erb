<h2><%= t 'views.users.password.edit.change_password' %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="inputs">
    <%= f.input :password, :label => t("views.users.password.edit.new_password"), :required => true %>
    <%= f.input :password_confirmation, :label => t("views.users.password.edit.confirm_password"), :required => true %>
  </div>

  <div class="actions">
    <%= f.button :submit, t("submit") %>
  </div>
<% end %>
